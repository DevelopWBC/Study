<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.wzw.mapper.UserMapper" >
	<insert id="insertUser" parameterType="cn.wzw.pojo.User">
		insert into user(username,password,sex,address) values(#{username},#{password},#{sex},#{address}) 
	</insert>
	
	<select id="selectUser" resultType="cn.wzw.pojo.User">
		select * from user
	</select>
	
	<update id="updateUser" parameterType="cn.wzw.pojo.User">
		update user set 
		<include refid="updateOP"></include>
		where user.id = #{user.id}
		
	</update>
	
	<delete id="deleteUser" parameterType="int">
		delete * from user t where t.id=#{value}
	</delete>
	
	<select id="findUserById" parameterType="int" resultType="cn.wzw.pojo.User">
		select * from user t where t.id=#{id}
	</select>
	
	<sql id="updateOP">
		<if test="user != null">
			<if test="user.username != null">
				username = #{user.username}
			</if>
			<if test="user.password != null">
				birthday = #{user.password}
			</if>
			<if test="user.sex != null">
				sex = #{user.sex}
			</if>
			<if test="user.address != null">
				address = #{user.address}
			</if>
		</if>
	</sql>
</mapper>