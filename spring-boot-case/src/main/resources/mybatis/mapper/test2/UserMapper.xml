<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springbootcase.demo.dao.test2.UserMapper">
    <select id="listUser" resultType="springbootcase.demo.pojo.data.test2.User">
        select * from user
    </select>
    <select id="getUserById" parameterType="int" resultType="springbootcase.demo.pojo.data.test2.User">
        select * from user where id = #{value}
    </select>
    <select id="countUser" resultType="int">
        select count(*) from user
    </select>
    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{id}
    </delete>
    <update id="updateUser" parameterType="springbootcase.demo.pojo.data.test2.User">
        update user set name=#{name} where id = #{id}
    </update>
    <insert id="insertUser" parameterType="springbootcase.demo.pojo.data.test2.User" useGeneratedKeys="true" keyProperty="id">
        insert into user(name) values (#{user.name})
    </insert>
</mapper>